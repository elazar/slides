import org.json.*;
// ...
try {
    JSONTokener tokener = new JSONTokener(content);
    JSONArray contacts = (JSONArray) tokener.nextValue();
    JSONObject contact = contacts.getJSONObject(0);
    String email = contact.getString("email");
    // ...
} catch (JSONException e) {
    // ...
}
]]></script>
